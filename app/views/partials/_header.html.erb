            <li class="nav-item"><%= link_to "Log out", destroy_user_session_path, :method => :get, class: "nav-link btn" %></li>
            <li><span class="nav-link btn">Hello, <%= current_user.email %>!</span><span class="notice"><%= notice %></span><span class="alert"><%= alert %></span></li>
          <% else %>
            <li class="nav-item"><%= link_to "Register", new_user_registration_path, class: "nav-link btn" %></li>
            <li class="nav-item"><%= link_to "Log in", new_user_session_path, class: "nav-link btn invert" %></li>
