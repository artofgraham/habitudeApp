<header class="container-fluid">
  <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
    <div class="container-lg">
      <a class="navbar-brand" href="/" tabindex="1"><%= image_tag "habitude-logo.svg", width: "60", title: "Habitude" %></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item dropdown">
            <%= link_to "Habits", habits_path, { class: "nav-link dropdown-toggle btn invert", id: "navbarDropdown", role: "button", "data-bs-toggle": "dropdown", "aria-expanded": "false", tabindex: "2" } %>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><%= link_to "Tracking", trackers_path, class: "dropdown-item", tabindex: "3" %></li>
              <li><%= link_to "New tracker", new_tracker_path, class: "dropdown-item", tabindex: "4" %></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <%= link_to "Essentials", essentials_path, { class: "nav-link dropdown-toggle btn invert", id: "navbarDropdown", role: "button", "data-bs-toggle": "dropdown", "aria-expanded": "false", tabindex: "5" } %>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><%= link_to "Not-to-dos", not_to_dos_path, class: "dropdown-item", tabindex: "6" %></li>
              <li><%= link_to "New not-to-do", new_not_to_do_path, class: "dropdown-item", tabindex: "7" %></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <%= link_to "Comfort zone", comfort_zone_path, { class: "nav-link dropdown-toggle btn invert", id: "navbarDropdown", role: "button", "data-bs-toggle": "dropdown", "aria-expanded": "false", tabindex: "5" } %>
