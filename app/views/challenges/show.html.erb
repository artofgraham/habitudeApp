<%= content_for :body_id, "challenge_" + "#{@challenge.id}" %>
<section class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 challenge">
        <div class="done">
          <%= @challenge.check %>
        </div>
        <h2 class="challenge-heading"><%= @challenge.name %></h2>
        <div class="date">
          <p><%= @challenge.cdate %></p>
        </div>
        <div class="position">
          <p><%= @challenge.position %></p>
        </div>
      </div>
    </div>
  </div>
</section>
<p class="success"><%= notice %></p>
<div>
  <%= link_to "Edit", edit_challenge_path(@challenge) %>
  <%= link_to "Back", challenges_path %>
  <%= button_to "Delete", @challenge, method: :delete %>
</div>